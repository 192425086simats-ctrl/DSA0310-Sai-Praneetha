import nltk
from nltk import CFG
grammar = CFG.fromstring("""
S -> NP_SG VP_SG | NP_PL VP_PL
NP_SG -> 'he' | 'boy'
NP_PL -> 'they' | 'boys'
VP_SG -> 'runs'
VP_PL -> 'run'
""")
parser = nltk.ChartParser(grammar)
sentences = [
    "he runs",
    "they run",
    "he run"
]
for sent in sentences:
    tokens = sent.split()
    parses = list(parser.parse(tokens))
    if parses:
        print(sent, "-> Correct")
    else:
        print(sent, "-> Incorrect")
